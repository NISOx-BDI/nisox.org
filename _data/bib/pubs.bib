title = {{A hybrid procedure for detecting global treatment effects in multivariate clinical trials: theory and applications to fMRI studies.}},
url = {http://onlinelibrary.wiley.com/doi/10.1002/sim.4395/abstract https://www2.warwick.ac.uk/fac/sci/systemsbiology/staff/minas/sim4395.pdf http://www.ncbi.nlm.nih.gov/pubmed/22170084},
