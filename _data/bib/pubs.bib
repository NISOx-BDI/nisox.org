issn = {1091-6490},
journal = {Proceedings of the National Academy of Sciences of the United States of America},
keywords = {cluster inference,fMRI,false positives,permutation test,statistics},
month = {jul},
number = {28},
pages = {7900--5},
pmid = {27357684},
title = {{Cluster failure: Why fMRI inferences for spatial extent have inflated false-positive rates.}},
url = {http://www.pnas.org/lookup/doi/10.1073/pnas.1602413113 http://www.ncbi.nlm.nih.gov/pubmed/27357684 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC4948312},
