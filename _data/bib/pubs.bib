issn = {1095-9572},
journal = {NeuroImage},
keywords = {Heritability,Multiple testing problem,Permutation test},
month = {jul},
pages = {256--68},
pmid = {25812717},
publisher = {Elsevier B.V.},
title = {{Fast and powerful heritability inference for family-based neuroimaging studies.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/25812717 http://linkinghub.elsevier.com/retrieve/pii/S1053811915001792 http://dx.doi.org/10.1016/j.neuroimage.2015.03.005 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC4463976},
